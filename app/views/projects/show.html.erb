<%= @project.name %>
<%= @project.description %>

<div class="comments-details">

  <% if @project.comments.any? %>
    <h4>Comments for <%= @project.name %> </h4>

    <ul>
      <% @project.comments.each do |comment| %>
      <li>
        <%= comment.name %> | <%= comment.comment %>

        <% if current_user.admin == 't'  %>
          [<%= link_to 'Edit', edit_project_comment_path(@project, comment) %> ||
          <%= link_to 'Delete', project_comment_path(@project, comment),
                                :data => {:confirm => "Are you sure you want to delete this comment?",
                                          :method => "Delete"} %>]


        <% end %>
      </li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no comments yet!</p>

  <% end %>
  <div class="newcomment">

  </div>
  <p><%= link_to "Add a comment", new_project_comment_path(@project), id: "commentadd", remote: true %></p>

</div>
